{
	"name": "@kilpi/react-client",
	"description": "Kilpi React Client Components Â· Kilpi is the authorization framework for full-stack TypeScript applications, designed for flexible, powerful, agnostic, intuitive and developer friendly authorization.",
	"version": "0.3.16",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"type": "module",
	"private": false,
	"scripts": {
		"build": "tsup src/index.ts --format cjs,esm --dts",
		"lint": "eslint && tsc",
		"test": "vitest run --config ./vitest.config.ts",
		"dev": "vitest watch --config ./vitest.config.ts"
	},
	"dependencies": {
		"@kilpi/client": "workspace:*",
		"@kilpi/core": "workspace:*",
		"react": "^19.0.0",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.0",
		"@testing-library/react-hooks": "^8.0.1",
		"@testing-library/user-event": "^14.6.1",
		"@types/react": "^19.0.0",
		"@vitejs/plugin-react": "^5.0.4",
		"react-dom": "19"
	},
	"author": "Jussi Nevavuori <nevavuori.jussi@gmail.com>",
	"homepage": "https://kilpi.vercel.app",
	"bugs": "https://github.com/jussinevavuori/kilpi/issues",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jussinevavuori/kilpi.git"
	},
	"keywords": [
		"fine-grained",
		"authorization",
		"abac",
		"rbac",
		"react"
	]
}