---
import { nanoid } from "nanoid";

const id = nanoid();
---

<div class="pl-16 relative Mdx_Steps space-y-4">
  <slot />
</div>

<script is:inline>
  (() => {
    const steps = document.querySelectorAll(`.Mdx_Steps p[data-mdx-step-number]`);
    steps?.forEach((step, index) => {
      step.innerHTML = index + 1;
    });
  })();
</script>
