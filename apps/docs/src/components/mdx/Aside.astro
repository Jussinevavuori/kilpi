---
import { cn } from "@/utils/cn";
import { CheckIcon, CircleAlertIcon, InfoIcon, LightbulbIcon } from "lucide-react";

type Props = {
  type?: "note" | "warning" | "tip" | "success";
};

const { type = "note" } = Astro.props;

const Icon = {
  note: InfoIcon,
  warning: CircleAlertIcon,
  tip: LightbulbIcon,
  success: CheckIcon,
}[type];
---

<aside
  class={cn(
    "flex rounded border gap-1 flex-col p-2",
    {
      warning: "border-orange-100 bg-orange-50 dark:bg-orange-600/20 dark:border-orange-900",
      tip: "border-purple-100 bg-purple-50 dark:bg-purple-600/20 dark:border-purple-900",
      success: "border-green-100 bg-green-50 dark:bg-green-600/20 dark:border-green-900",
      note: "border-blue-100 bg-blue-50 dark:bg-blue-600/20 dark:border-blue-900",
    }[type]
  )}
>
  <div class="flex items-center gap-2">
    <Icon
      className={cn(
        "size-4",
        {
          warning: "text-orange-700 dark:text-orange-400",
          tip: "text-purple-700 dark:text-purple-400",
          success: "text-green-700 dark:text-green-400",
          note: "text-blue-700 dark:text-blue-400",
        }[type]
      )}
    />
    <p
      class={cn(
        "text-sm font-semibold",
        {
          warning: "text-orange-700 dark:text-orange-400",
          tip: "text-purple-700 dark:text-purple-400",
          success: "text-green-700 dark:text-green-400",
          note: "text-blue-700 dark:text-blue-400",
        }[type]
      )}
    >
      {
        {
          note: "Note",
          warning: "Warning",
          tip: "Tip",
          success: "Success",
        }[type]
      }
    </p>
  </div>
  <div
    class="space-y-2 pl-6 [&_p]:leading-relaxed [&_p]:text-sm [&_li]:leading-relaxed [&_li]:text-sm"
  >
    <slot />
  </div>
</aside>
